---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

// Helper to parse dates that might be multiline strings
const parseDate = (dateStr: any): Date => {
  if (dateStr instanceof Date) return dateStr;
  const cleanDate = typeof dateStr === 'string' ? dateStr.trim().split('\n')[0] : String(dateStr);
  return new Date(cleanDate);
};

const posts = (await getCollection('blog')).sort(
  (a, b) => parseDate(b.data.date).getTime() - parseDate(a.data.date).getTime()
);
---

<Layout title="Blog - Two Ghosts Strategy">
  <Navigation />

  <section class="max-w-7xl mx-auto px-10 py-10">
    <div class="section-heading relative mb-8">
      <div class="bgtext-section">Insights</div>
      <h1 class="section-title">
        Blog
      </h1>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mt-12">
      {posts.map((post) => (
        <a href={`/blog/${post.slug}`} class="glass p-6 rounded-lg hover:bg-white/10 transition-all group">
          <h2 class="text-2xl font-bold mb-3 group-hover:gradient-ghost transition-all">
            {post.data.title}
          </h2>
          <p class="text-gray-300 mb-4">{post.data.excerpt}</p>
          <span class="text-sm text-gray-400">
            {parseDate(post.data.date).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </span>
        </a>
      ))}
    </div>
  </section>

  <Footer />
</Layout>
