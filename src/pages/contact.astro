<!-- Grid: Image left, content+form right -->
<div class="mt-12 lg:mt-16 grid lg:grid-cols-2 lg:gap-12 items-start">

  <!-- Illustration -->
  <div class="mb-10 lg:mb-0 flex justify-center lg:justify-start">
    <div class="w-full max-w-md lg:max-w-lg">
      <img
        src="/images/mail.svg"
        alt="Contact us"
        class="w-full h-auto"
      />
    </div>
  </div>

  <!-- Right Column -->
  <div class="lg:pl-6">

    <!-- Contact Info (moved ABOVE the form) -->
    <div class="mb-10 space-y-3 text-gray-50 font-['Raleway'] text-sm sm:text-base">
      <p class="text-lg sm:text-xl text-white font-semibold font-['Raleway']">
        We'd love to hear from you. Whether you're dealing with chaos, growth, or the
        kind of marketing mess that keeps you up at night, we're here.
      </p>

      <div class="mt-6 space-y-3">
        <div>
          <dt class="sr-only">Location</dt>
          <dd>Raleigh, NC</dd>
        </div>
        <div>
          <dt class="sr-only">Phone number</dt>
          <dd>
            <a href="tel:9843440738" class="hover:text-[#8F6AFA] transition-colors">
              +1 (984) 344-0738
            </a>
          </dd>
        </div>
        <div>
          <dt class="sr-only">Email</dt>
          <dd>
            <a href="mailto:hello@twoghoststrategy.com" class="hover:text-[#8F6AFA] transition-colors">
              hello@twoghoststrategy.com
            </a>
          </dd>
        </div>
      </div>
    </div>

    <!-- Header above the form -->
    <h3 class="mb-5 text-2xl sm:text-3xl text-white font-extrabold font-['Raleway']">
      Send a Message
    </h3>

    <!-- Success + Error Messages -->
    <div
      id="form-success"
      class="hidden p-4 mb-4 text-sm text-green-400 bg-green-900/20 border border-green-400 rounded-lg"
    >
      Thank you for your message! We'll get back to you soon.
    </div>

    <div
      id="form-error"
      class="hidden p-4 mb-4 text-sm text-red-400 bg-red-900/20 border border-red-400 rounded-lg"
    >
      There was an error sending your message. Please try again or email us directly.
    </div>

    <!-- FORM -->
    <div class="glass rounded-3xl border border-white/10 px-6 sm:px-8 py-8 sm:py-10 shadow-xl shadow-black/40">
      <form id="contact-form" class="space-y-5">

        <!-- Name -->
        <div>
          <label for="name" class="block text-sm font-medium text-white font-['Raleway']">
            Name
          </label>
          <input
            id="name"
            type="text"
            name="name"
            required
            class="mt-1 block w-full rounded-md border border-white/20 bg-black/40 px-4 py-3 text-sm text-white font-['Raleway'] focus:border-white focus:outline-none focus:ring-0"
          />
        </div>

        <!-- Email + Phone -->
        <div class="grid gap-4 sm:grid-cols-2">
          <div>
            <label for="email" class="block text-sm font-medium text-white font-['Raleway']">
              Email
            </label>
            <input
              id="email"
              type="email"
              name="email"
              required
              class="mt-1 block w-full rounded-md border border-white/20 bg-black/40 px-4 py-3 text-sm text-white font-['Raleway'] focus:border-white focus:outline-none focus:ring-0"
            />
          </div>

          <div>
            <label for="phone" class="block text-sm font-medium text-white font-['Raleway']">
              Phone
            </label>
            <input
              id="phone"
              type="tel"
              name="phone"
              required
              class="mt-1 block w-full rounded-md border border-white/20 bg-black/40 px-4 py-3 text-sm text-white font-['Raleway'] focus:border-white focus:outline-none focus:ring-0"
            />
          </div>
        </div>

        <!-- Website (optional) -->
        <div>
          <label for="website" class="block text-sm font-medium text-white font-['Raleway']">
            Website <span class="text-gray-400">(optional)</span>
          </label>
          <input
            id="website"
            type="url"
            name="website"
            placeholder="https://yourwebsite.com"
            class="mt-1 block w-full rounded-md border border-white/20 bg-black/40 px-4 py-3 text-sm text-white font-['Raleway'] focus:border-white focus:outline-none focus:ring-0"
          />
        </div>

        <!-- Message -->
        <div>
          <label for="message" class="block text-sm font-medium text-white font-['Raleway']">
            Tell us what youâ€™re dealing with
          </label>
          <textarea
            id="message"
            name="message"
            rows="4"
            required
            class="mt-1 block w-full rounded-md border border-white/20 bg-black/40 px-4 py-3 text-sm text-white font-['Raleway'] focus:border-white focus:outline-none focus:ring-0"
          ></textarea>
        </div>

        <button
          type="submit"
          id="contact-submit"
          class="btn-gradient w-full mt-2 rounded-full py-3 text-sm font-semibold font-['Raleway']"
        >
          Send Message
        </button>
      </form>
    </div>

  </div>
</div>
