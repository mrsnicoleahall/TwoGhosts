---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Schedule A Consultation - Two Ghosts Strategy">
  <Navigation />

  <section class="container-80 mx-auto px-10 py-10" data-animate>
    <div class="section-heading relative mb-8">
      <div class="bgtext-section">Schedule</div>
      <h1 class="section-title">
        Schedule A Consultation
      </h1>
    </div>

    <div class="flex flex-wrap mt-10">
      <!-- Illustration -->
      <div class="w-full lg:w-1/2 px-4 my-4">
        <img
          src="/images/schedule.svg"
          alt="Schedule a consultation"
          class="w-full h-auto"
        />
      </div>

      <!-- Google Calendar Appointment Scheduling -->
      <div class="w-full lg:w-1/2 px-4 my-4">
        <div class="p-8 rounded-lg bg-white">
          <!-- Google Calendar Appointment Scheduling begin -->
          <iframe src="https://calendar.google.com/calendar/appointments/schedules/AcZssZ1iJddWg4eV-xT2F0Aj23flLUjLjlvzFxcm_HQ7tr7E_L73MlabbBiX4SAcedmreik9qjuYJp1I?gv=true" style="border: 0" width="100%" height="600" frameborder="0"></iframe>
          <!-- end Google Calendar Appointment Scheduling -->
        </div>
      </div>
    </div>
  </section>

  <footer class="container-80 py-12 border-t border-gray-800">
    <div class="text-center text-gray-400">
      <p>&copy; 2025 TWOGHOSTS, LLC. All Rights Reserved.</p>
      <p class="mt-2">
        <a href="mailto:hello@twoghoststrategy.com" class="hover:text-white">hello@twoghoststrategy.com</a> |
        <a href="tel:9195044443" class="hover:text-white"> 919-504-4443</a>
      </p>
    </div>
  </footer>
</Layout>
