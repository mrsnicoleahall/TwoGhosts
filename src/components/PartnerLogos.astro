---
// Partner Logos Component - Client logos showcase
const clients = [
  { name: 'EPIC Business', logo: '/images/clients/epic.webp' },
  { name: 'Valpak', logo: '/images/clients/valpak.png' },
  { name: 'Cuemby', logo: '/images/clients/cuemby.webp' },
  { name: 'Freshworks', logo: '/images/clients/freshworks.png' },
  { name: 'Unliver', logo: '/images/clients/unliver.webp' },
  { name: 'Robo-Negotiator', logo: '/images/clients/robo-negotiator.png' },
];
---

<div class="bg-transparent">
  <div class="max-w-full px-4 py-12 mx-20 sm:px-6 lg:py-16 lg:px-8">
    <div class="mt-6 grid grid-cols-1 gap-0.5 md:grid-cols-3 lg:mt-8">
      {clients.map((client) => (
        <div class="flex justify-center col-span-1 px-8 py-8 grayscale hover:grayscale-0 transition-all">
          <img
            src={client.logo}
            alt={client.name}
            class="h-16 w-auto object-contain"
          />
        </div>
      ))}
    </div>
  </div>
</div>
